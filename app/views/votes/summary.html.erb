<h1 class="vote-summary-title">Vote Summary</h1>
<% @positions.each do |position| %>
  <h2 class="position-title"><%= position.name %></h2>
  <table class="vote-summary-table">
    <thead>
      <tr>
        <th class="table-header">Candidate</th>
        <th class="table-header">Votes</th>
        <th class="table-header">Percentage</th>
      </tr>
    </thead>
    <tbody>
      <% position.candidates.each do |candidate| %>
        <tr class="table-row">
          <td class="table-data"><%= candidate.name %></td>
          <td class="table-data"><%= candidate.votes.count %></td>
          <td class="table-data"><%= candidate.vote_percentage %> %</td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>



<style>
body {
  font-family: Arial, sans-serif;
  background-color: #f8f8f8;
  margin: 0;
  padding: 20px;
}
/* Title Styles */
.vote-summary-title {
  text-align: center;
  font-size: 2.5em;
  color: #333;
  margin-bottom: 20px;
}

/* Position Title Styles */
.position-title {
  font-size: 2em;
  color: #555;
  margin-top: 20px;
}

/* Table Styles */
.vote-summary-table {
  width: 100%;
  border-collapse: collapse;
  margin-top: 10px;
  background-color: white;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
}

/* Table Header Styles */
.table-header {
  background-color: #007bff;
  color: white;
  padding: 10px;
  text-align: left;
}

/* Table Row Styles */
.table-row {
  border-bottom: 1px solid #ddd;
}

/* Table Data Styles */
.table-data {
  padding: 10px;
}

/* Hover Effect for Rows */
.table-row:hover {
  background-color: #f1f1f1;
}

</style>

<!-- app/views/devise/registrations/new.html.erb -->
<% if @user.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
    <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<h1 class="form-title">Sign Up</h1>

<%= form_for @user, url: registration_path(:user), html: { class: 'signup-form' } do |f| %>
  <div class="form-group">
    <%= f.label :email, class: 'form-label' %>
    <%= f.email_field :email, class: 'form-input' %>
  </div>

  <div class="form-group">
    <%= f.label :password, class: 'form-label' %>
    <%= f.password_field :password, class: 'form-input' %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, class: 'form-label' %>
    <%= f.password_field :password_confirmation, class: 'form-input' %>
  </div>

  <div class="form-group">
    <%= f.label :developer, "Sign up as Developer", class: 'form-label' %>
    <%= f.check_box :developer, class: 'form-check' %>
  </div>

  <div class="form-group">
    <%= f.label :admin, "Sign up as Admin", class: 'form-label' %>
    <%= f.check_box :admin, class: 'form-check' %>
  </div>

  <div class="form-actions">
    <%= f.submit "Sign up", class: 'btn btn-primary' %>
  </div>
<% end %>

<style>
  /* General Form Styling */
  .form-title {
    font-size: 28px;
    font-weight: bold;
    margin-bottom: 20px;
    text-align: center;
    color: #333;
  }

  .signup-form {
    max-width: 500px;
    margin: 0 auto;
    padding: 20px;
    background-color: #f9f9f9;
    border: 1px solid #ddd;
    border-radius: 8px;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
  }

  .form-group {
    margin-bottom: 15px;
  }

  .form-label {
    font-size: 16px;
    margin-bottom: 5px;
    display: block;
    color: #555;
  }

  .form-input {
    width: 100%;
    padding: 10px;
    border: 1px solid #ccc;
    border-radius: 4px;
    font-size: 16px;
    transition: border-color 0.3s ease;
  }

  .form-input:focus {
    border-color: #007bff;
    box-shadow: 0 0 5px rgba(0, 123, 255, 0.3);
    outline: none;
  }

  .form-check {
    margin-left: 10px;
    transform: scale(1.2);
  }

  .form-actions {
    margin-top: 20px;
    text-align: center;
  }

  .btn-primary {
    padding: 12px 20px;
    background-color: #007bff;
    color: white;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    font-size: 16px;
    width: 100%;
    transition: background-color 0.3s ease;
  }

  .btn-primary:hover {
    background-color: #0056b3;
  }

  /* Responsive Styling */
  @media (max-width: 768px) {
    .signup-form {
      padding: 15px;
    }

    .form-title {
      font-size: 24px;
    }

    .form-label {
      font-size: 14px;
    }

    .form-input {
      font-size: 14px;
    }

    .btn-primary {
      font-size: 14px;
      padding: 10px;
    }
  }
</style>
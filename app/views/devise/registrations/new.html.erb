<%= form_for @user do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :email %>
  <%= f.email_field :email %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.label :contact_number %>
  <%= f.telephone_field :contact_number %>

  <%= f.label :role, "Select your role" %>
  <%= f.select :role, options_for_select([['Developer', 'developer'], ['Admin', 'admin'], ['Voter', 'voter']]) %>

  <%= f.submit "Sign up" %>
<% end %>

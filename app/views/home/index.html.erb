<div class="container">
  <h1 class="welcome-title">WoRank Technologies Limited</h1>
  <h1>Welcome to the Voting Platform</h1>

  <% if current_user %>
    <% if current_user.developer? %>
      <p>Welcome, Developer! You can assign roles:</p>
      <%= link_to 'Assign Roles', developer_dashboard_path, class: 'action-link' %>
    <% elsif current_user.admin? %>
      <p>Welcome, Admin! You can manage the voting system:</p>
      <div class="options-list">
        <%= link_to 'Create Developer', new_admin_developer_path, class: 'action-link' %>
        <%= link_to 'Manage Voters', admin_voters_path, class: 'action-link' %>
        <%= link_to 'Manage Positions', admin_positions_path, class: 'action-link' %>
        <%= link_to 'Add Candidate', new_admin_candidate_path, class: 'action-link' %>
        <%= link_to 'View Admin Summary', admin_votes_summary_path, class: 'action-link' %>
      </div>
    <% else %>
      <p>Cast your vote here:</p>
      <%= link_to 'Vote Now', positions_path, class: 'action-link' %>
    <% end %>
  <% else %>
    <p>Please log in to access the platform.</p>
    <%= link_to 'Log In', new_user_session_path, class: 'action-link' %>
    <%= link_to 'Sign Up', new_user_registration_path, class: 'action-link' %>
  <% end %>
</div>

<style>
  .container {
    text-align: center;
    padding: 20px;
    max-width: 800px; /* Limit container width for better readability */
    margin: 0 auto; /* Center the container */
  }

  .welcome-title {
    font-size: 28px;
    font-weight: bold;
    margin-bottom: 15px;
    color: #333;
  }

  h1 {
    font-size: 24px;
    color: #444; /* Slightly darker for better contrast */
    margin-bottom: 20px;
  }

  .action-link {
    display: inline-block;
    padding: 10px 20px;
    color: #fff;
    text-decoration: none;
    border-radius: 5px;
    transition: background-color 0.3s ease;
    margin: 10px 5px; /* Add horizontal margin for spacing */
    width: calc(100% - 10px); /* Make links full width minus margin */
    max-width: 300px; /* Limit max width for buttons */
  }

  .action-link {
    background-color: #28a745; /* Green */
  }

  .action-link:hover {
    background-color: #218838; /* Darker green on hover */
  }

  .options-list {
    display: flex;
    flex-direction: column; /* Stack items vertically */
    align-items: center; /* Center align the items */
    padding: 0;
    list-style-type: none;
    margin: 20px 0; /* Space above and below the options list */
  }

  @media (min-width: 600px) {
    .options-list {
      flex-direction: row; /* Switch to row layout on larger screens */
      flex-wrap: wrap; /* Allow wrapping for larger numbers of links */
      justify-content: center; /* Center the links */
    }

    .action-link {
      margin: 10px; /* Spacing between links */
      width: auto; /* Reset width for larger screens */
    }
  }
</style>
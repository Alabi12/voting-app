<h1>Candidates List</h1>

<table class="candidates-table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Position</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @candidates.each do |candidate| %>
      <tr>
        <td><%= candidate.name %></td>
        <td><%= candidate.position.name %></td>
        <td>
          <%= link_to 'Edit', edit_admin_candidate_path(candidate), class: "action-link" %>
          <%= link_to 'Delete', admin_candidate_path(candidate), method: :delete, data: { confirm: "Are you sure?" }, class: "delete-link action-link" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<a href="<%= new_admin_candidate_path %>" class="new-candidate-button">Create New Candidate</a>

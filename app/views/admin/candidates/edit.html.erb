<h1>Edit Candidate</h1>

<%= form_with model: [:admin, @candidate], local: true do |form| %>
  <div>
    <%= form.label :name, "Candidate Name" %>
    <%= form.text_field :name, required: true %>
  </div>

  <div>
    <%= form.label :position_id, "Position" %>
    <%= form.collection_select :position_id, @positions, :id, :name, prompt: "Select Position" %>
  </div>

  <div>
    <%= form.label :image, "Candidate Image" %>
    <%= form.file_field :image %>
    <% if @candidate.image.attached? %>
      <p>Current Image:</p>
      <%= image_tag @candidate.image %>
    <% end %>
  </div>

  <div>
    <%= form.submit "Update Candidate" %>
  </div>
<% end %>

<%= link_to "Back to Candidates", admin_candidates_path %>

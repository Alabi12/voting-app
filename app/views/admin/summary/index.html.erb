<div class="container">
  <h1>Admin Summary</h1>

  <p>Total Voters: <%= @total_voters %></p>
  <p>Total Candidates: <%= @total_candidates %></p>
  <p>Total Votes Cast: <%= @total_votes %></p>

  <h2>Votes by Position</h2>
  <% @positions.each do |position| %>
    <h3><%= position.name %> - Total Votes: <%= position.total_votes %></h3>
    <ul>
      <% position.candidates.each do |candidate| %>
        <% percentage = position.total_votes > 0 ? (candidate.votes.count.to_f / position.total_votes * 100).round(2) : 0 %>
        <li>
          <strong><%= candidate.name %>:</strong> <%= candidate.votes.count %> votes (<%= percentage %>%)
        </li>
      <% end %>
    </ul>
  <% end %>
</div>

<style>
  .container {
    text-align: center;
    padding: 20px;
  }

  h1, h2, h3 {
    margin-bottom: 20px;
    color: #333;
  }

  ul {
    list-style-type: none;
    padding: 0;
  }

  li {
    margin: 10px 0;
    font-size: 18px;
  }
</style>

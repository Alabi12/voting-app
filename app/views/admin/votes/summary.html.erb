<!-- app/views/admin/votes/summary.html.erb -->
<div class="container">
  <h1>Admin Summary</h1>
  <p>Total Voters: <%= @total_voters %></p>
  <p>Total Candidates: <%= @total_candidates %></p>
  <p>Total Votes Cast: <%= @total_votes %></p>

  <h2>Votes by Candidate</h2>
  <ul>
    <% @votes_by_candidate.each do |candidate_id, votes| %>
      <% candidate = Candidate.find(candidate_id) %>
      <% percentage = @total_votes > 0 ? (votes.to_f / @total_votes * 100).round(2) : 0 %>
      <li><strong><%= candidate.name %>:</strong> <%= votes %> votes (<%= percentage %>%)</li>
    <% end %>
  </ul>
</div>

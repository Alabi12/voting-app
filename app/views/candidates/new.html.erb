<h1>New Candidate for <%= @position.name %></h1>

<%= form_with model: [@position, @candidate], local: true, html: { multipart: true } do |form| %>
  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :image %>
    <%= form.file_field :image %>
  </div>

  <div class="actions">
    <%= form.submit 'Create Candidate' %>
  </div>
<% end %>

<%= link_to 'Back', position_path(@position) %>

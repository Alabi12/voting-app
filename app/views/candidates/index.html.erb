<h1 class="candidate-title"><%= @position.name %> - Candidates</h1>

<ul class="candidate-list">
  <% @position.candidates.each do |candidate| %>
    <li class="candidate-item" id="candidate-<%= candidate.id %>"> <!-- Added ID for selection -->
      <% if candidate.image.attached? %>
        <%= image_tag candidate.image, alt: candidate.name, class: "candidate-image" %>
      <% else %>
        <p class="no-image">No image available</p>
      <% end %>
      <div class="candidate-info">
        <span class="candidate-name"><%= candidate.name %></span> - 
        <span class="vote-count"><%= candidate.votes_count %> votes</span> <!-- Show the current vote count -->
        <% if user_signed_in? && !current_user.voted_for?(@position) %>
          <%= button_to 'Vote', vote_position_candidate_path(@position, candidate), method: :post, class: "vote-button" %>
        <% else %>
          <button class="vote-button" disabled>Voted</button>
        <% end %>
      </div>
    </li>
  <% end %>
</ul>

<style>
  /* Your existing CSS styles remain unchanged */
  .candidate-title {
    font-size: 28px;
    font-weight: bold;
    margin: 30px 0;
    color: #333;
    text-align: center;
  }

  .candidate-list {
    list-style-type: none;
    padding: 0;
    max-width: 800px;
    margin: 0 auto;
  }

  .candidate-item {
    display: flex;
    align-items: center;
    margin: 20px 0;
    padding: 15px;
    border: 1px solid #ddd;
    border-radius: 5px;
    background-color: #ffffff;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    transition: background-color 0.3s, transform 0.3s;
  }

  .candidate-item:hover {
    background-color: #f9f9f9;
    transform: translateY(-2px);
  }

  .candidate-image {
    max-width: 100px;
    max-height: 100px;
    border-radius: 5px;
    margin-right: 15px;
    object-fit: cover;
  }

  .candidate-info {
    flex-grow: 1;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .no-image {
    color: #777;
  }

  .candidate-name {
    font-weight: bold;
    font-size: 20px;
    color: #333;
  }

  .vote-count {
    margin-left: 10px;
    color: #555;
    font-size: 18px;
  }

  .vote-button {
    padding: 10px 15px;
    background-color: #007BFF;
    color: white;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    transition: background-color 0.3s;
    margin-left: 20px;
  }

  .vote-button:hover {
    background-color: #0056b3;
  }

  /* Add your responsive styles here */
</style>
